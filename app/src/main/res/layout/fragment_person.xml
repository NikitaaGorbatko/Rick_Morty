<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@android:color/black"
        android:textSize="@dimen/person_text_size"
        tools:text="Rick"
        app:layout_constraintStart_toStartOf="@+id/image_person"
        app:layout_constraintTop_toBottomOf="@+id/image_person" />

    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@android:color/black"
        android:textSize="@dimen/person_text_size"
        tools:text="Alive"
        app:layout_constraintStart_toStartOf="@+id/image_person"
        app:layout_constraintTop_toBottomOf="@+id/text_person_name" />

    <TextView
        android:id="@+id/text_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@android:color/black"
        android:textSize="@dimen/person_text_size"
        tools:text="Species"
        app:layout_constraintStart_toStartOf="@+id/image_person"
        app:layout_constraintTop_toBottomOf="@+id/text_status" />

    <TextView
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@android:color/black"
        android:textSize="@dimen/person_text_size"
        tools:text="Type"
        app:layout_constraintStart_toStartOf="@+id/image_person"
        app:layout_constraintTop_toBottomOf="@+id/text_species" />

    <TextView
        android:id="@+id/text_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@android:color/black"
        android:textSize="@dimen/person_text_size"
        app:layout_constraintStart_toStartOf="@+id/image_person"
        app:layout_constraintTop_toBottomOf="@+id/text_type"
        tools:text="Gender" />

    <TextView
        android:id="@+id/text_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@android:color/black"
        android:textSize="@dimen/person_text_size"
        app:layout_constraintStart_toStartOf="@+id/image_person"
        app:layout_constraintTop_toBottomOf="@+id/text_gender"
        tools:text="Episode"/>

    <TextView
        android:id="@+id/text_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@android:color/black"
        android:textSize="@dimen/person_text_size"
        app:layout_constraintStart_toStartOf="@+id/image_person"
        app:layout_constraintTop_toBottomOf="@+id/text_episode"
        tools:text="Created"/>
</androidx.constraintlayout.widget.ConstraintLayout>